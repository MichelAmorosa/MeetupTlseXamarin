<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GandalfApp6.App">
	<Application.Resources>


        <ResourceDictionary>
            <Style TargetType="Label" x:Key="NameLabel">
                <Setter Property="TextColor" Value="Red" />
                <Setter Property="FontAttributes" Value="Italic" />
            </Style>


            <OnPlatform x:TypeArguments="Color" x:Key="GridBgColor" Android="LightGray" iOS="Pink" WinPhone="Aqua" />

            <Style TargetType="Grid">
                <Setter Property="BackgroundColor" Value="{StaticResource GridBgColor}"/>
            </Style>

        </ResourceDictionary>


    </Application.Resources>
</Application>